<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:background="@drawable/rounded_border_title"
            android:elevation="8dp"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="110dp"
            >
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:text="Create account"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_marginTop="150dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_border"
            android:padding="10dp">
            <EditText
                android:id="@+id/tvPhoto"
                android:layout_width="351dp"
                android:layout_height="40dp"
                android:layout_marginTop="-10dp"
                android:background="@android:color/transparent"
                android:hint="Your Picture..."
                android:padding="10dp"
                android:textSize="16sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/llContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="120dp"
            android:padding="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="160dp"
                android:background="@drawable/rounded_border"
                android:padding="10dp">

                <EditText
                    android:id="@+id/tvEmail"
                    android:layout_width="356dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="-10dp"
                    android:background="@android:color/transparent"
                    android:hint="Your Email..."
                    android:padding="10dp"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_border"
                android:padding="10dp">

                <EditText
                    android:id="@+id/tvName"
                    android:layout_width="361dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="-10dp"
                    android:background="@android:color/transparent"
                    android:hint="Your Name..."
                    android:padding="10dp"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_border"
                android:padding="10dp">

                <EditText
                    android:id="@+id/tvSurname"
                    android:layout_width="361dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="-10dp"
                    android:background="@android:color/transparent"
                    android:hint="Your Surname..."
                    android:padding="10dp"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_border"
                android:padding="10dp">

                <EditText
                    android:id="@+id/tvPassword"
                    android:layout_width="366dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="-10dp"
                    android:background="@android:color/transparent"
                    android:inputType="textPassword"
                    android:hint="Your Password..."
                    android:padding="10dp"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_border"
                android:padding="10dp">

                <EditText
                    android:id="@+id/tvAddress"
                    android:layout_width="359dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="-10dp"
                    android:background="@android:color/transparent"
                    android:hint="Your Address..."
                    android:padding="10dp"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_border"
                android:padding="10dp">

                <EditText
                    android:id="@+id/tvPhoneNumber"
                    android:layout_width="353dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="-10dp"
                    android:background="@android:color/transparent"
                    android:inputType="number"
                    android:hint="Your Phone Number..."
                    android:padding="10dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_border"
                android:padding="10dp">

                <EditText
                    android:id="@+id/tvPosition"
                    android:layout_width="356dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="-10dp"
                    android:background="@android:color/transparent"
                    android:hint="Your compagny poste..."
                    android:padding="10dp"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_border"
                android:padding="10dp">

                <EditText
                    android:id="@+id/tvDepartment"
                    android:layout_width="349dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="-10dp"
                    android:background="@android:color/transparent"
                    android:hint="Your Department..."
                    android:padding="10dp"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_border"
                android:padding="10dp">

                <EditText
                    android:id="@+id/tvSalary"
                    android:layout_width="352dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="-10dp"
                    android:background="@android:color/transparent"
                    android:inputType="number"
                    android:hint="Your Salary..."
                    android:padding="10dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_border"
                android:padding="10dp">

                <EditText
                    android:id="@+id/tvContract_length"
                    android:layout_width="365dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="-10dp"
                    android:background="@android:color/transparent"
                    android:inputType="number"
                    android:hint="Your Contract_length..."
                    android:padding="10dp"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_border"
                android:padding="10dp">

                <EditText
                    android:id="@+id/tvStatut"
                    android:layout_width="359dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="-10dp"
                    android:background="@android:color/transparent"
                    android:hint="Your Statut..."
                    android:padding="10dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_border"
                android:padding="10dp">

                <EditText
                    android:id="@+id/tvSkill"
                    android:layout_width="364dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="-10dp"
                    android:background="@android:color/transparent"
                    android:hint="Your Skill and training..."
                    android:padding="10dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_border"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="You Hired at ..."
                    android:textSize="16sp"
                    android:alpha="0.5"
                    />
                <DatePicker
                    android:id="@+id/datePicker_hired"
                    android:layout_width="223dp"
                    android:layout_height="96dp"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner" />

                <EditText
                    android:id="@+id/tvhired_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:layout_marginLeft="-220dp"
                    android:inputType="datetime"
                    android:hint="Time here"
                    android:textColorHint="@android:color/darker_gray" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_border"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="You log at ..."
                    android:textSize="16sp"
                    android:alpha="0.5"
                    />
                <DatePicker
                    android:id="@+id/datePicker_log_at"
                    android:layout_width="223dp"
                    android:layout_height="96dp"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner" />

                <EditText
                    android:id="@+id/tvlogat_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:layout_marginLeft="-220dp"
                    android:inputType="datetime"
                    android:hint="Time here"
                    android:textColorHint="@android:color/darker_gray" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_border"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="You logout at ..."
                    android:textSize="16sp"
                    android:alpha="0.5"
                    />
                <DatePicker
                    android:id="@+id/datePicker_logout"
                    android:layout_width="223dp"
                    android:layout_height="96dp"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner" />

                <EditText
                    android:id="@+id/tvlogout_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:layout_marginLeft="-220dp"
                    android:inputType="datetime"
                    android:hint="Time here"
                    android:textColorHint="@android:color/darker_gray" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/button_submit"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_below="@id/llContent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/my_blue" />

        <ImageView
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@id/button_submit"
            android:src="@drawable/loginicone" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_submit"
            android:layout_centerHorizontal="true"
            android:text="Submit"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </RelativeLayout>
</ScrollView>