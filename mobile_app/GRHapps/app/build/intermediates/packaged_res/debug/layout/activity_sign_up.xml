<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign_up">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="114dp"
        android:layout_height="128dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="-35dp"
        app:srcCompat="@drawable/full_cerlce" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="158dp"
        android:layout_height="109dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="260dp"
        android:layout_marginEnd="-7dp"
        android:layout_marginBottom="156dp"
        app:srcCompat="@drawable/full_cerlce" />

<!--    for title login account -->
    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:background="@drawable/rounded_border_title"
        android:elevation="8dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="110dp"
        >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            android:text="Login Account"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>


<!--    for the bloc user and password -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:background="@drawable/rounded_border"
            android:elevation="8dp"
            android:orientation="vertical"
            android:padding="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_border_small"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/usernameIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/username"
                    android:layout_alignBottom="@id/username"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/baseline_person_outline_24" />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="-10dp"
                    android:background="@android:color/transparent"
                    android:hint="Your Email/Username..."
                    android:textColorHint="@color/white"
                    android:padding="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/rounded_border_small"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/PasswordIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/password"
                    android:layout_alignBottom="@id/password"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/baseline_lock_24" />
                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="-10dp"
                    android:hint="Your Password..."
                    android:inputType="textPassword"
                    android:textColorHint="@color/white"
                    android:padding="10dp" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/button_login"
        android:layout_width="40pt"
        android:layout_height="40pt"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="600dp"
        android:backgroundTint="@color/my_blue"
         />
    
    <ImageView
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="610dp"
        android:src="@drawable/loginicone"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="690dp"
        android:text="Login"
        android:textColor="@color/black"
        android:textSize="20dp" />


</RelativeLayout>